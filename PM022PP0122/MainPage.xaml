<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM022PP0122.MainPage"
             BackgroundImageSource="Backpm02.JPG">

    <StackLayout>
        
        <Label Text="Nombre" FontSize="Title" Padding="0,0,0,0" TextColor="White"/>
        <Entry Placeholder="Nombre" 
               Keyboard="Text" 
               x:Name="txtnombre" 
               Margin="5,0,5,0" TextColor="White"/>
        
        <Label Text="Edad" FontSize="Title" Padding="0,0,0,0" TextColor="White"/>
        <Entry Placeholder="Edad" Keyboard="Text" x:Name="txtedad" Margin="5,0,5,0" TextColor="White"/>

        <Button Text="Mostrar" x:Name="btnmostrar" Margin="10,0,10,0" Clicked="btnmostrar_Clicked"/>

        <Button Text="Segunda Pagina" x:Name="btnpagina" Margin="10,0,10,0" Clicked="btnpagina_Clicked"/>

    </StackLayout>

</ContentPage>
