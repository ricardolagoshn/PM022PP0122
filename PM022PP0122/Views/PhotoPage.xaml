<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM022PP0122.Views.PhotoPage">
    <ContentPage.Content>
        <StackLayout>

            <Image x:Name="Foto" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" BackgroundColor="AliceBlue" />

            <Button x:Name="btnfoto" Text="Tomar Foto" Clicked="btnfoto_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>